<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.tju.core.security.mappers.AuthorityMapper">


    <insert id="insert">
        insert into user_authority values (#{id},#{name})
    </insert>

    <insert id="insertAuth">
        insert into authority(name)
        SELECT #{name}
        WHERE NOT EXISTS (
            SELECT 1
            FROM authority
            WHERE name = #{name}
        )
    </insert>
</mapper>